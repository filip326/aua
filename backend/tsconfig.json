{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],

        "module": "NodeNext",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "baseUrl": "./",
        "typeRoots": ["node_modules/@types", "typings"],

        "declaration": true,
        "outDir": "dist",
        "removeComments": true,

        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true
    },
    "include": ["typings", "src"]
}
